<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FIX: Wrap toolbar inside AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:paddingTop="24dp"
            android:background="?colorPrimary"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white"
            app:menu="@menu/home_menu"
            app:elevation="4dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Language Selection Card (clean layout) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/languageCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Row label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Languages"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary_light"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <!-- Input / Swap / Target in one row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Input language -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Input"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary_light"
                                android:layout_marginBottom="2dp" />

                            <Spinner
                                android:id="@+id/spinnerInputLanguage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingHorizontal="4dp" />
                        </LinearLayout>

                        <!-- Swap icon in center -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSwapLanguages"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="@style/Widget.Material3.Button.Icon"
                            app:icon="@drawable/ic_swap"
                            app:iconSize="18dp"
                            app:backgroundTint="@android:color/transparent"
                            app:iconTint="?colorPrimary"
                            android:elevation="0dp"
                            android:translationX="-6dp"
                            android:contentDescription="Swap input and target language"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <!-- Target language -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary_light"
                                android:layout_marginBottom="2dp" />

                            <Spinner
                                android:id="@+id/spinnerTargetLanguage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingHorizontal="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Visualization Space Card with Microphone -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/visualizationCard"
                android:layout_width="0dp"
                android:layout_height="280dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="?colorSurface"
                app:layout_constraintTop_toBottomOf="@id/languageCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <!-- Animated Wave Circle 1 (Outermost) -->
                    <View
                        android:id="@+id/waveCircle1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_wave"
                        android:visibility="invisible"
                        android:alpha="0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.4" />

                    <!-- Animated Wave Circle 2 (Middle) -->
                    <View
                        android:id="@+id/waveCircle2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_wave"
                        android:visibility="invisible"
                        android:alpha="0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.4" />

                    <!-- Animated Wave Circle 3 (Inner) -->
                    <View
                        android:id="@+id/waveCircle3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_wave"
                        android:visibility="invisible"
                        android:alpha="0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.4" />

                    <!-- Microphone Button (centered) -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabMicrophone"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_microphone"
                        app:fabCustomSize="80dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle"
                        app:tint="@color/white"
                        app:backgroundTint="?colorPrimary"
                        app:elevation="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.4" />

                    <!-- Status Text (below mic) -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_tap_mic"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/fabMicrophone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Translate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTranslate"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="Translate"
                android:textSize="15sp"
                style="@style/Widget.SpeechSync.Button"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@id/visualizationCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- Audio Status / Player Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/audioStatusCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?colorSurface"
                app:layout_constraintTop_toBottomOf="@id/btnTranslate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Loading Indicator -->
                    <LinearLayout
                        android:id="@+id/loadingContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/progressLoading"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            style="?android:attr/progressBarStyleSmall"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tvAudioStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waiting for translation..."
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary_light"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Player Controls -->
                    <LinearLayout
                        android:id="@+id/playerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPlayPause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.Button.Icon"
                            app:icon="@android:drawable/ic_media_play"
                            app:iconSize="22dp"/>

                        <TextView
                            android:id="@+id/tvAudioDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="14sp"
                            android:textColor="?colorOnSurface"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Retry and Reset Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetry"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:text="Retry"
                android:textSize="14sp"
                style="@style/Widget.SpeechSync.Button"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/audioStatusCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnReset"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:text="Reset"
                android:textSize="14sp"
                style="@style/Widget.SpeechSync.Button"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/audioStatusCard"
                app:layout_constraintStart_toEndOf="@id/btnRetry"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>