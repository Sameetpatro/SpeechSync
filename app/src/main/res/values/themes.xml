<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SpeechSync" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_light</item>

        <!-- STATUS BAR (only these two, nothing else) -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- OPTIONAL: nav bar, uncomment if you want bottom bar also blue -->
        <!--
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightNavigationBar">false</item>
        -->

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SpeechSync.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SpeechSync.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SpeechSync.LargeComponent</item>

        <!-- Default widgets -->
        <item name="materialButtonStyle">@style/Widget.SpeechSync.Button</item>
        <item name="textInputStyle">@style/Widget.SpeechSync.TextInputLayout</item>

    </style>

    <!-- App theme -->
    <style name="Theme.SpeechSync" parent="Base.Theme.SpeechSync" />

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.SpeechSync.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.SpeechSync.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.SpeechSync.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.SpeechSync.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Text Input Style -->
    <style name="Widget.SpeechSync.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Circle shape for FAB -->
    <style name="ShapeAppearance.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
